<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".activity.SharePrefActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Siklus Hidup Android"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:textSize="22sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/name_text_input"
            android:layout_margin="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edKomentar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:hint="Komentar" />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnImplicit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Implicit Intents"
                android:layout_margin="12dp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/btnExlicit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:text="Explicit Intents"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnBundle"
            android:layout_width="wrap_content"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Bundle"/>

    </LinearLayout>
</RelativeLayout>